<?xml version='1.0'?>

<robot name="hurba_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!--gazebo plugins-->
  <xacro:include filename="$(find hurba_navigation)/urdf/hurba_mecanum.gazebo" />

  <link name="base_footprint"></link>

  <!--joints-->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="chassis" />
  </joint>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0.0 0.205 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0.0 -0.255 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.25 0 0.2" rpy="0 0 0"/>
    <child link="camera_link"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <joint type="fixed" name="camera_optical_joint">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <child link="camera_link_optical"/>
    <parent link="camera_link"/>
  </joint>

  <joint type="fixed" name="scan_joint">
    <origin xyz="0.0 0 0.38" rpy="0 0 0"/>
    <child link="scan_link"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <!--chassis-->
  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.15" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".4 .4 .4"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 -0.05" rpy=" 0 0 3.14156"/>
      <geometry>
        <!--box size=".4 .4 .4"/-->
        <mesh filename = "package://hurba_robot/meshes/chassis.dae"/>
      </geometry>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <!--left wheel-->
  <link name='left_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://hurba_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--right wheel-->
  <link name='right_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://hurba_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--camera-->
  <link name='camera_link'>
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>

    <visual name='camera_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>

  </link>

  <link name="camera_link_optical">
  </link>

  <!--lidar-->
  <link name='scan_link'>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='scan_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://hurba_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

  </link>


  <!--camera color-->
  <gazebo reference="camera_link">
    <material>Gazebo/Red</material>
  </gazebo>


</robot>


